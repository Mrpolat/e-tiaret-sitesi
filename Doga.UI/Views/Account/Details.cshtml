@using Doga.UI.Entity
@model Doga.UI.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Detay Bilgileri</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Sipariş Durum</dt>
                <dd class="col-sm-9">
                    @if (@Model.OrderState == EnumOrderState.Waiting)
                    {
                        <span>Onay Bekleniyor</span>
                    }
                    else if (@Model.OrderState == EnumOrderState.Completed)
                    {
                        <span>Sipariş Tamamlandı</span>
                    }

                </dd>

                <dt class="col-sm-3">Sipariş Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Sipariş No</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Toplam ücret</dt>
                <dd class="col-sm-9">@Model.Total</dd>

                <dt class="col-sm-3">Sipariş Tarihi</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>


                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">
                    @Model.AdressBasligi
                    <hr />
                    @Model.Adres1
                    <br />
                    @Model.Sehir - @Model.Semt - @Model.Mahalle
                    <br />
                    @Model.PostaKodu
                </dd>

                <dt class="col-sm-3">Ürünler</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Ürün Adı</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Orderlines)
                            {

                                <tr>
                                    <td>
                                        <img src="~/Upload/@item.Image" width="70" alt="Alternate Text" />
                                    </td>
                                    <td>
                                        @item.ProductName
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        @item.Price
                                    </td>
                                    <td>
                                        <a href="/Home/Details/@item.ProductId" class="btn btn-primary" target="_blank">Ürün Detay</a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </dd>
            </dl>
        </div>
    </div>
</div>